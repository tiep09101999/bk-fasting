    <!--end Navigation-->

    <div class="container login">
      <section class="content">
        <div class="intro">
          <h2 class="intro__title">Fast forward to better health.</h2>
          <p class="intro__desc">
            Cải thiện chế độ ăn uống của bạn, giúp sức khỏe tốt hơn và có chế
            độ giảm cân phù hợp
          </p>
          <button class="cta white">Bắt đầu</button>
        </div>
        <div class="form">
          <a class="form__facebook" href="auth/facebook"><img src="assets/icon-facebook.svg" alt="" />Đăng nhập với
            Facebook</a>
          <span>hoặc</span>
          <form action="/login-local" method="post">
            <div class="form__inputWrapper">
              <label for="email">Email</label>
              <input type="email" name="email" placeholder="Nhập email của bạn" />
            </div>
            <div class="form__inputWrapper">
              <label for="passwork">Mật khẩu</label>
              <input type="password" name="password" placeholder="Mật khẩu" />
            </div>

            <% if(errors !="" ) { %>
              <% errors.forEach(item=> { %>
                <p class="form__error show">
                  <%- item %>
                </p>
                <% });%>
                  <% } %>
                    <% if(success !="" ) { %>
                      <%success.forEach(item=> { %>

                        <p class="form__error success">
                          <%- item %>
                        </p>
                        <% });%>
                          <% } %>

                            <div class="form__account">
                              <p>
                                Chưa có tài khoản?
                                <a class="link" href="/register">Đăng ký tại đây</a>
                              </p>
                            </div>

                            <button class="cta">Đăng nhập</button>
          </form>
        </div>
      </section>
    </div>
  </div>

  <!-- // import footer For Mobile -->

  <script src="js/pwa/pw.js"></script>
</body>

</html>