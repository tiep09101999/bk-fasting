    <div class="modal__content">
      <form>
        <div class="modal__form">
          <div class="modal__inputWrapper">
            <label for="">Tên của bạn</label>
            <input
              id="editName"
              type="text"
              placeholder="Nhập tên của bạn"
              name=""
            />
          </div>
          <div class="modal__inputWrapper">
            <label for="">Giới tính</label>
            <select name="" id="editGender" placeholder="Chọn giới tính">
              <option data-gender="Male">Nam</option>
              <option data-gender="Female">Nữ</option>
            </select>
          </div>
          <div class="modal__inputWrapper">
            <label for="">Địa chỉ</label>
            <input
              id="editAddress"
              type="text"
              placeholder="Nhập địa chỉ của bạn"
              name=""
            />
          </div>
          <div class="modal__inputWrapper">
            <label for="">Số điện thoại</label>
            <input
              id="editPhone"
              type="text"
              placeholder="Nhập số điện thoại của bạn"
              name=""
            />
          </div>
          <div class="modal__inputWrapper" id="editAvatar">
            <label for="inputImage">Ảnh đại diện</label>
            <input
              class="modal__inputImage"
              type="file"
              name="avatar"
              id="inputImage"
            />
          </div>

          <input type="button" value="Cập nhật" class="cta" id="btn-update-user"></input >
        </div>
      </form>
    </div>
  </div>
